<!-- Content Heading -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>
    
<!-- Message Block -->
<%- messages() %>
    
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>

<!-- Update Account Information Display -->
<form action="/account/update" method="post">
    <label class="lbl-properties">First name:
        <input type="text" id="fname" name="account_firstname" required value="<%= locals.account_firstname %>"> 
    </label>
    <label class="lbl-properties">Last name:
        <input type="text" id="lname" name="account_lastname" required value="<%= locals.account_lastname %>">
    </label>
    <label class="lbl-properties">Email address:
         <input type="email" id="email" name="account_email" placeholder="Enter a valid email address" required value="<%= locals.account_email %>">
    </label>

    <div class="form-row">
        <!-- <button type="submit" class="btn-submit" id="btn-submit">Register</button> -->
        <input type="submit" name="submit" class="btn-submit" value="Update">
        <input type="hidden" name="account_id"
        <% if(locals.account_id) { %> value="<%= locals.account_id %>"
        <% } %>>
        <!-- <input type="hidden" name="action" value="register"> -->
    </div>
</form>

<h2>Update Password</h2>

<p>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</p>
<p>*note your original password will be changed</p>

<form action="/account/change" method="post">
    <label class="lbl-properties">Password:
        <input type="password" id="password" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
    </label>
    <div><i>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</i></div>
    <span id="pswdBtn">Show Password</span>

    <div class="form-row">
        <input type="submit" name="submit" class="btn-submit" value="Change Password">
        <input type="hidden" name="account_id"
        <% if(locals.account_id) { %> value="<%= locals.account_id %>"
        <% } %>>
    </div>
</form>
<script src="../../js/script.js"></script>